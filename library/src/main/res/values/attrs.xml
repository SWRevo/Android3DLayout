<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="depth_autoAnimate" format="boolean"/>
    <attr name="depth_isCircle" format="boolean"/>
    <attr name="depth_edgeColor" format="color"/>
    <attr name="depth_value" format="dimension"/>
    <attr name="depth_elevation" format="dimension"/>
    <attr name="depth_zIndex" format="integer"/>

    <declare-styleable name="DepthRelativeLayout">
        <attr name="depth_isCircle"/>
        <attr name="depth_edgeColor"/>
        <attr name="depth_value"/>
        <attr name="depth_elevation"/>
        <attr name="depth_zIndex"/>
        <attr name="depth_autoAnimate"/>
    </declare-styleable>

    <declare-styleable name="DepthFrameLayout">
        <attr name="depth_isCircle"/>
        <attr name="depth_edgeColor"/>
        <attr name="depth_value"/>
        <attr name="depth_elevation"/>
        <attr name="depth_zIndex"/>
        <attr name="depth_autoAnimate"/>
    </declare-styleable>

    <declare-styleable name="DepthLinearLayout">
        <attr name="depth_isCircle"/>
        <attr name="depth_edgeColor"/>
        <attr name="depth_value"/>
        <attr name="depth_elevation"/>
        <attr name="depth_zIndex"/>
        <attr name="depth_autoAnimate"/>
    </declare-styleable>

</resources>
